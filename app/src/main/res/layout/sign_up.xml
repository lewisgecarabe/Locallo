<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFCF3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- LOGO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/locallo_icon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/locallo_icon" />

            <TextView
                android:id="@+id/sign_up_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Sign Up"
                android:textColor="#000000"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- TITLE -->

        <!-- SUBTITLE -->

        <!-- NAME FIELD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/signup_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins"
                android:text="Discover places, share stories, meet locals."
                android:textColor="#6F6F6F"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/name_field"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/mail"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <EditText
                android:id="@+id/edtTxt_Name_LG"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Name"
                android:inputType="text" />
        </LinearLayout>

        <!-- EMAIL/PHONE FIELD -->
        <LinearLayout
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/mail"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <EditText
                android:id="@+id/edtTxt_Email_LG"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Email"
                android:inputType="text" />
        </LinearLayout>

        <!-- PASSWORD FIELD -->
        <LinearLayout
            android:id="@+id/password_field"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/password"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- EYE ICON (toggle) -->
            <EditText
                android:id="@+id/edtTxt_Pass_LG"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword" />

            <ImageView
                android:id="@+id/password_eye"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/visibility" />
        </LinearLayout>

        <!-- TERMS OF SERVICE -->

        <!-- CREATE ACCOUNT BUTTON -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginRight="35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox_terms"
                android:layout_width="31dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/terms_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/poppins"
                android:text="Iâ€™m agree to The Terms of Service and Privacy Policy"
                android:textColor="#3B4054"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- BUTTON -->

        <Button
            android:id="@+id/btn_sbmt_LG"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="#20BBCA"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="Create Account"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />


        <!-- OR DIVIDER -->
        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Or"
            android:textColor="#999999"
            android:textSize="14sp" />

        <!-- GOOGLE SIGN UP -->
        <Button
            android:id="@+id/btn_google_LG"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="#FFFFFF"
            android:drawableStart="@drawable/icon_google"
            android:drawablePadding="12dp"

            android:drawableTint="@android:color/transparent"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:insetLeft="0dp"
            android:insetRight="0dp"

            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Google"
            android:textColor="#444444"
            android:textSize="14sp"
            app:cornerRadius="15dp"
            app:strokeColor="#EEEEEE"
            app:strokeWidth="1dp" />

        <!-- SIGN IN LINK -->
        <TextView
            android:id="@+id/signin_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/poppins"
            android:text="Do you have account? Sign In"
            android:textColor="#3B4054"
            android:textSize="14sp" />

    </LinearLayout>

</ScrollView>
